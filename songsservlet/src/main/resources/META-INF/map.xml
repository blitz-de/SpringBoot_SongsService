<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <package>ejava.jpa.hibernatemigration.legacyhbm</package>
    <access>FIELD</access>

    <entity class="Song">
        <table name="Songs"/>
        <attributes>
            <id name="id">
                <generated-value strategy="sequence" generator="song_generator"/>
                <column length="36"/>
            </id>
            <basic name="title" optional="false">
                <column length="100"/>
                <enumerated>STRING</enumerated>
            </basic>

            <basic name="artist" optional="true">
                <column length="100"/>
                <enumerated>STRING</enumerated>
            </basic>


            <basic name="label" optional="true">
                <column length="100"/>
                <enumerated>STRING</enumerated>
            </basic>


            <basic name="released" optional="true">

            </basic>

        </attributes>
    </entity>

    <sequence-generator name="song_generator" sequence-name="song_seq"/>
</entity-mappings>